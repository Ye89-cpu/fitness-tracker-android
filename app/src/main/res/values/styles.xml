<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppButton.Primary" parent="Widget.MaterialComponents.Button">
        <!-- Disable Material tint -->
        <item name="backgroundTint">@null</item>

        <!-- Use custom drawable -->
        <item name="android:background">@drawable/btn_primary_selector</item>

        <!-- Text -->
        <item name="android:textColor">@color/text_on_accent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>

        <!-- Shape consistency -->
        <item name="cornerRadius">24dp</item>

        <!-- Remove default insets -->
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

</resources>