<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/privacyRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="100dp">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarPrivacy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:elevation="2dp"
        android:title="Privacy Policy"
        android:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollPrivacy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarPrivacy"
        app:layout_constraintBottom_toTopOf="@id/bottomActions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:id="@+id/tvPolicyIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This Privacy Policy explains how the Fitness Tracker app collects, uses, and protects your information."
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="12dp"/>

            <TextView
                android:id="@+id/tvLastUpdated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last updated: 2026-01-15"
                android:textSize="13sp"
                android:alpha="0.75"
                android:paddingBottom="16dp"/>

            <!-- Section Card: Information We Collect -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1) Information We Collect"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Account data (e.g., name, email) if you create an account.\n• Activity data (e.g., running/cycling/weightlifting logs).\n• Device/app data (e.g., app version, crash logs) to improve stability.\n• Optional health-related metrics you enter (e.g., weight)."
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section Card: How We Use -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2) How We Use Your Information"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Provide core features (tracking, stats, progress).\n• Sync your data across devices (if enabled).\n• Improve performance, fix bugs, and enhance UX.\n• Send important service notices (e.g., security updates)."
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section Card: Sharing -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="3) Sharing of Information"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We do not sell your personal data. We may share limited data only:\n• With service providers (e.g., hosting) under confidentiality.\n• If required by law.\n• To protect users, the public, or our legal rights."
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section Card: Data Security -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4) Data Security"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We use reasonable technical and organizational measures to protect your data. However, no method of transmission or storage is 100% secure."
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section Card: Your Choices -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5) Your Choices Rights"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Access/update your profile information.\n• Export or delete your activity logs (if available).\n• Disable optional permissions (e.g., location) in device settings.\n• Contact us for privacy-related requests."
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Contact -->
            <TextView
                android:id="@+id/tvContactTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="8dp"
                android:paddingBottom="6dp"/>

            <TextView
                android:id="@+id/tvContactBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If you have questions about this Privacy Policy, contact us:\nEmail: support@yourapp.com"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="24dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom action bar -->
    <LinearLayout
        android:id="@+id/bottomActions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="end"
        android:background="?attr/colorSurface"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDecline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decline"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_marginEnd="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
