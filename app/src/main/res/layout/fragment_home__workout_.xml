<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    tools:context=".Home_Workout_Fragment"
    android:fitsSystemWindows="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Your Workout Data"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold" />



        <!-- Workout Type Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Workout Type"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilActivityType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/bg_card"
            app:hintTextColor="@color/text_hint"
            app:endIconMode="dropdown_menu">

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/actActivityType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Workout"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Start and End Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="@color/bg_card"
                app:hintTextColor="@color/text_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Start Time"
                    android:focusable="false"
                    android:clickable="true"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxBackgroundMode="outline"
                app:boxStrokeColor="#3A3A3A"
                app:hintTextColor="@color/text_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="End Time"
                    android:focusable="false"
                    android:clickable="true"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_hint" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Workout Intensity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Workout Intensity (1-100)"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/sbIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50" />

        <TextView
            android:id="@+id/tvIntensityValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intensity: Medium"
            android:textColor="@color/text_primary" />

        <!-- Reps -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Reps (Weightlifting)"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etReps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter number of reps"
            android:inputType="number"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint" />

        <!-- Weight -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Weight Lifted (kg)"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etWeightLifted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter weight lifted"
            android:inputType="numberDecimal"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint" />

        <!-- Notes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Notes (Optional)"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter any additional notes"
            android:inputType="textMultiLine"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint" />

        <TextView
            android:id="@+id/tvid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="null"/>

        <!-- Submit Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecord"
            style="@style/AppButton.Primary"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:text="Record Workout"
            android:textAllCaps="false"
            app:cornerRadius="18dp"
             />

    </LinearLayout>


</ScrollView>
