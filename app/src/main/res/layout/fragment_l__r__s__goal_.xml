<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#111111"
    tools:context=".L_R_S_Goal_Fragment">

    <!-- Back Button -->

    <!-- Title -->
    <TextView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="60dp"
        android:padding="16dp"
        android:text="â—€ Back"
        android:textColor="#E2F163"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="What Is Your Goal?"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/backBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Hint Text -->
    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Please select your fitness goal."
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RadioGroup for Goal Selection -->
    <RadioGroup
        android:id="@+id/goalRadioGroup"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:checkedButton="@id/rbLoseWeight">

        <!-- Lose Weight RadioButton -->
        <RadioButton
            android:id="@+id/rbLoseWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lose Weight"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:background="@drawable/radio_background"
            android:button="@null" />

        <!-- Gain Weight RadioButton -->
        <RadioButton
            android:id="@+id/rbGainWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gain Weight"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:background="@drawable/radio_background"
            android:button="@null" />

        <!-- Muscle Mass Gain RadioButton -->
        <RadioButton
            android:id="@+id/rbMuscleMassGain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muscle Mass Gain"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:background="@drawable/radio_background"
            android:button="@null" />

        <!-- Shape Body RadioButton -->
        <RadioButton
            android:id="@+id/rbShapeBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shape Body"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            android:padding="16dp"
            android:background="@drawable/radio_background"
            android:button="@null" />

    </RadioGroup>

    <!-- Continue Button -->
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/bg_next_button"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>



