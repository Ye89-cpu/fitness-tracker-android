<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#111111"
    tools:context=".L_R_S_PhyALFragment">

    <!-- Back Button -->

    <!-- Title -->
    <TextView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:padding="16dp"
        android:text="â—€ Back"
        android:textColor="#E2F163"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Physical Activity Level"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/backBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

]


    <TextView
        android:id="@+id/btnBeginner"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_level_unselected"
        android:gravity="center"
        android:text="Beginner"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/btnIntermediate"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_level_unselected"
        android:gravity="center"
        android:text="Intermediate"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/btnBeginner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/btnAdvance"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_level_unselected"
        android:gravity="center"
        android:text="Advance"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/btnIntermediate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Continue Button -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        style="@style/AppButton.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="30dp"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>


