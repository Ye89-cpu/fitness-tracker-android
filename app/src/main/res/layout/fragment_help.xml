<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/helpRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="100dp">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarHelp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:title="Help"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollHelp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarHelp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Search bar (optional, simple UI) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilHelpSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search help topics"
                app:startIconDrawable="@drawable/ic_search_24"
                app:endIconMode="clear_text"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etHelpSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Quick actions -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQuickActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quick actions"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="10dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnHowToLogWorkout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How to log a workout" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFixSync"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fix sync issues"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_marginTop="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPermissions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Permissions  Location"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ Section -->
            <TextView
                android:id="@+id/tvFaqTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FAQ"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="8dp"/>

            <!-- FAQ item 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvQ1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Why is my activity not saving?"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingBottom="6dp"/>

                    <TextView
                        android:id="@+id/tvA1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Check your internet connection and make sure you tapped Save. If you use sync, sign in again and retry."
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ item 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvQ2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How do I reset my password?"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingBottom="6dp"/>

                    <TextView
                        android:id="@+id/tvA2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Go to Login → Forgot Password, then follow the instructions sent to your email."
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Contact support -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="14dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact support"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvSupportInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email: support@yourapp.com\nResponse time: 24–48 hours"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:paddingBottom="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEmailSupport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email support" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOpenPrivacyPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Privacy Policy"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Footer note -->
            <TextView
                android:id="@+id/tvHelpFooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tip: Keep your app updated for best performance and bug fixes."
                android:textSize="13sp"
                android:alpha="0.75"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
